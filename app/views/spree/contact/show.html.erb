<% @body_id = 'contact_us' %>


<div id="contact-us">
  <h1><%= t("contact_us") %></h1>

  <div data-hook='contact'>
    <%= render "spree/shared/error_messages", :target => @message %>
		<br/>

    <%= form_for(:message, :url => contact_path) do |f| %>

      <div data-hook="contact_inside_form">
        <p>
          <%= f.label :topic_id, t("subject") %><br />
          <%= f.collection_select :topic_id, @topics, :id, :name  %>  
        </p>

        <p>
          <%= f.label :name, t("name") %><br />
          <%= f.text_field :name  %>  
        </p>

        <p>
          <%= f.label :email, t("email") %><br />
          <%= f.text_field :email  %>  
        </p>

        <p>
          <%= f.label :order_number, t(:order_number) %> (<%= t('optional') %>)<br />
          <%= f.text_field :order_number  %>  
        </p>

        <p>
          <%= f.label :message, t("message") %><br />
          <%= f.text_area :message, :rows => 10  %>  
        </p>

        <p><%= submit_tag t("send_message"), :class => 'button primary' %></p>
      </div>
    <% end %>
  </div>
</div>
